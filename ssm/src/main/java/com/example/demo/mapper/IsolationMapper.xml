<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.IsolationMapper">
    <update id="update">
        update isolation set amount = #{amount} where id = #{id}
    </update>

    <select id="getById" resultType="com.example.demo.entity.Isolation">
        select * from isolation where id = #{id}
    </select>

</mapper>